{
  "name": "@dotdo/bench",
  "version": "0.1.0",
  "description": "Performance and cost benchmarks for dotdo database backends",
  "type": "module",
  "scripts": {
    "bench": "vitest bench",
    "bench:run": "vitest bench --run",
    "bench:cold": "vitest bench --run benchmarks/cold-start.bench.ts",
    "bench:warm": "vitest bench --run benchmarks/warm-query.bench.ts",
    "bench:hot": "vitest bench --run benchmarks/hot-cache.bench.ts",
    "bench:worker-do": "vitest bench --run benchmarks/worker-vs-do.bench.ts",
    "bench:colo": "vitest bench --run benchmarks/colo.bench.ts",
    "bench:mongo": "vitest bench --run databases/mongo.bench.ts",
    "bench:graph": "vitest bench --run benchmarks/graph.bench.ts",
    "bench:financial": "vitest bench --run benchmarks/financial.bench.ts",
    "bench:financial:simulated": "TIGERBEETLE_SIMULATED=true vitest bench --run benchmarks/financial.bench.ts",
    "bench:bundle": "node scripts/measure-bundles.js",
    "bench:cost": "node scripts/calculate-costs.js",
    "bench:vfs": "vitest bench --run benchmarks/vfs-cost.bench.ts",
    "bench:all": "pnpm bench:bundle && pnpm bench:run && pnpm bench:cost",
    "report": "npx tsx scripts/generate-report.ts",
    "report:all": "pnpm bench:all && pnpm report",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20250121.0",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "gzip-size": "^7.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0",
    "wrangler": "^3.100.0"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.1.0",
    "@db4/client": "^0.1.0",
    "@db4/core": "^0.1.0",
    "@db4/do": "^0.1.0",
    "@dotdo/graphdb": "file:packages/graphdb",
    "@dotdo/sdb": "file:packages/sdb",
    "@dotdo/poc-tigerbeetle-do": "file:packages/pocs/packages/tigerbeetle-do",
    "evodb": "^0.1.0",
    "hono": "^4.7.0"
  },
  "pnpm": {
    "overrides": {
      "@db4/core": "^0.1.0",
      "@db4/config": "^0.1.0",
      "@db4/rpc": "^0.1.0",
      "@db4/storage": "^0.1.0",
      "@db4/schema": "^0.1.0",
      "@db4/query": "^0.1.0",
      "@db4/vortex": "^0.1.0",
      "@db4/cache": "^0.1.0",
      "@db4/auth": "^0.1.0",
      "@db4/replication": "^0.1.0"
    }
  }
}
