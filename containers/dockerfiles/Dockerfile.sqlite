# SQLite Container for Cloudflare Containers
# Alpine-based with SQLite3 and HTTP bridge
FROM alpine:3.19

# Install dependencies
RUN apk add --no-cache \
    nodejs \
    npm \
    sqlite \
    curl

# Create HTTP bridge directory
WORKDIR /app

# Create package.json
RUN cat > /app/package.json << 'EOF'
{
  "name": "sqlite-http-bridge",
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "better-sqlite3": "^11.0.0"
  }
}
EOF

RUN npm install

# Create the HTTP bridge server
RUN cat > /app/server.mjs << 'EOF'
import { createServer } from 'http';
import Database from 'better-sqlite3';

// Database cache
const databases = new Map();

function getDatabase(dbPath) {
  if (!databases.has(dbPath)) {
    const db = new Database(dbPath === ':memory:' ? ':memory:' : `/data/${dbPath}`);
    db.pragma('journal_mode = WAL');
    db.pragma('busy_timeout = 5000');
    db.pragma('foreign_keys = ON');
    databases.set(dbPath, db);
  }
  return databases.get(dbPath);
}

const server = createServer(async (req, res) => {
  const url = new URL(req.url, `http://${req.headers.host}`);

  // CORS headers
  res.setHeader('Access-Control-Allow-Origin', '*');
  res.setHeader('Access-Control-Allow-Methods', 'GET, POST, OPTIONS');
  res.setHeader('Access-Control-Allow-Headers', 'Content-Type');

  if (req.method === 'OPTIONS') {
    res.writeHead(204);
    res.end();
    return;
  }

  try {
    if (url.pathname === '/health' || url.pathname === '/ping') {
      const db = getDatabase(':memory:');
      db.prepare('SELECT 1').get();
      res.writeHead(200, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ status: 'healthy' }));
      return;
    }

    if (url.pathname === '/ready') {
      try {
        const db = getDatabase(':memory:');
        db.prepare('SELECT 1').get();
        res.writeHead(200, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ ready: true }));
      } catch {
        res.writeHead(503, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({ ready: false }));
      }
      return;
    }

    if (req.method !== 'POST') {
      res.writeHead(405, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ error: 'Method not allowed' }));
      return;
    }

    const body = await new Promise((resolve) => {
      let data = '';
      req.on('data', chunk => data += chunk);
      req.on('end', () => resolve(JSON.parse(data || '{}')));
    });

    const db = getDatabase(body.database || ':memory:');

    if (url.pathname === '/query') {
      const stmt = db.prepare(body.query);
      const isSelect = body.query.trim().toUpperCase().startsWith('SELECT') ||
                       body.query.trim().toUpperCase().startsWith('PRAGMA');

      if (isSelect) {
        const rows = stmt.all(...(body.params || []));
        res.writeHead(200, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({
          rows,
          rowsAffected: 0,
          lastInsertRowid: null,
          changes: 0,
        }));
      } else {
        const result = stmt.run(...(body.params || []));
        res.writeHead(200, { 'Content-Type': 'application/json' });
        res.end(JSON.stringify({
          rows: [],
          rowsAffected: result.changes,
          lastInsertRowid: result.lastInsertRowid,
          changes: result.changes,
        }));
      }
      return;
    }

    if (url.pathname === '/execute') {
      const stmt = db.prepare(body.query);
      const result = stmt.run(...(body.params || []));
      res.writeHead(200, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({
        rowsAffected: result.changes,
        lastInsertRowid: result.lastInsertRowid,
      }));
      return;
    }

    if (url.pathname === '/batch') {
      const results = [];
      const transaction = db.transaction((statements) => {
        for (const stmt of statements) {
          const prepared = db.prepare(stmt.sql);
          const isSelect = stmt.sql.trim().toUpperCase().startsWith('SELECT') ||
                           stmt.sql.trim().toUpperCase().startsWith('PRAGMA');

          if (isSelect) {
            const rows = prepared.all(...(stmt.params || []));
            results.push({
              rows,
              rowsAffected: 0,
              lastInsertRowid: null,
              changes: 0,
            });
          } else {
            const result = prepared.run(...(stmt.params || []));
            results.push({
              rows: [],
              rowsAffected: result.changes,
              lastInsertRowid: result.lastInsertRowid,
              changes: result.changes,
            });
          }
        }
      });

      transaction(body.statements || []);
      res.writeHead(200, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify(results));
      return;
    }

    if (url.pathname === '/backup') {
      await db.backup(body.destination);
      res.writeHead(200, { 'Content-Type': 'application/json' });
      res.end(JSON.stringify({ success: true }));
      return;
    }

    res.writeHead(404, { 'Content-Type': 'application/json' });
    res.end(JSON.stringify({ error: 'Not found' }));

  } catch (error) {
    res.writeHead(500, { 'Content-Type': 'application/json' });
    res.end(JSON.stringify({ error: error.message }));
  }
});

server.listen(8080, '0.0.0.0', () => {
  console.log('SQLite HTTP bridge listening on port 8080');
});
EOF

# Create data directory
RUN mkdir -p /data

# Expose HTTP bridge port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=5s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8080/health || exit 1

CMD ["node", "/app/server.mjs"]
